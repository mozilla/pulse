{
  "name": "pulse",
  "title": "Pulse",
  "id": "pulse@mozilla.com",
  "description": "We're building the next generation of Firefox, and we're focusing on real-world speed and performance. Pulse lets you give our engineers feedback about your experience on websites that work well in Firefox and on websites that don't.",
  "author": "Firefox Test Pilot",
  "license": "MPL-2.0",
  "version": "1.0.0",
  "homepage": "https://testpilot.firefox.com/experiments/pulse",
  "hasEmbeddedWebExtension": true,
  "permissions": {
    "multiprocess": true,
    "private-browsing": true
  },
  "dependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.23.0",
    "classnames": "^2.2.5",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "deploy-txp": "^1.0.7",
    "eslint": "^3.13.1",
    "eslint-plugin-react": "^6.9.0",
    "file-loader": "^0.10.0",
    "jpm": "^1.2.2",
    "json-loader": "^0.5.4",
    "node-sass": "^4.1.1",
    "npm-run-all": "^4.0.1",
    "on-build-webpack": "^0.1.0",
    "prettier": "^0.11.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "redux-form": "^6.5.0",
    "sass-lint": "^1.10.2",
    "sass-loader": "^4.1.1",
    "shelljs": "^0.7.6",
    "style-loader": "^0.13.1",
    "testpilot-metrics": "^2.1.0",
    "urijs": "^1.18.4",
    "url-loader": "^0.5.7",
    "uuid": "^3.0.1",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.3"
  },
  "icon": {
    "64": "webextension/icons/pulse-64.png",
    "128": "webextension/icons/pulse-128.png"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/pulse.git"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "package": "npm run build && mv dist/pulse.xpi addon.xpi",
    "deploy": "deploy-txp",
    "watch": "NODE_ENV=dev webpack --watch",
    "prettier": "prettier --single-quote --write 'src/**/*.{js,jsx}'",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --ext .js --ext .jsx",
    "lint:sass": "sass-lint -q -v",
    "survey": "webpack-dev-server --content-base build/"
  },
  "updateURL": "https://testpilot.firefox.com/files/pulse@mozilla.com/updates.json"
}
