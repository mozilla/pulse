{
  "manifest_version": 2,
  "name": "pulse",
  "version": "1.0",
  "description": "A super sweet catchphrase.",
  "homepage_url": "https://testpilot.firefox.com/experiments/pulse",
  "icons": {
    "48": "icons/pulse-64.png"
  },
  "applications": {
    "gecko": {
      "id": "pulse@mozilla.org",
      "strict_min_version": "51.0"
    }
  },
  "permissions": [
    "webNavigation",
    "webRequest",
    "<all_urls>"
  ],
  "page_action": {
    "browser_style": true,
    "default_icon": "icons/pulse-64.png",
    "default_title": "Status update with Pulse.",
    "default_popup": "survey/index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
